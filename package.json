{
  "name": "hunspell-reader",
  "version": "3.0.1",
  "description": "A library for reading Hunspell Dictionary Files",
  "bin": "bin.js",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "bin.js",
    "!**/*.map",
    "!**/*.test.*"
  ],
  "scripts": {
    "test": "mocha --recursive ./dist/*.test.js",
    "build": "tsc -p .",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test",
    "clean": "rimraf ./dist",
    "coverage": "npm run generate-code-coverage",
    "generate-code-coverage": "NODE_ENV=test nyc npm run test-ts",
    "test-ts": "NODE_ENV=test mocha --require ts-node/register --recursive \"src/**/*.test.ts\"",
    "test-watch": "mocha --require ts-node/register --watch --recursive \"src/**/*.test.ts\"",
    "coverage-coveralls": "nyc report --reporter=text-lcov | coveralls",
    "travis-coverage": "npm run generate-code-coverage && npm run coverage-coveralls",
    "watch": "tsc -w"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jason-Rev/hunspell-reader.git"
  },
  "keywords": [
    "Hunspell"
  ],
  "author": "Jason Dent",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Jason-Rev/hunspell-reader/issues"
  },
  "homepage": "https://github.com/Jason-Rev/hunspell-reader#readme",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/fs-extra": "^7.0.0",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.14.7",
    "chai": "^4.2.0",
    "coveralls": "^3.0.3",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "rimraf": "^2.6.3",
    "ts-node": "^8.1.0",
    "typescript": "^3.4.5"
  },
  "dependencies": {
    "commander": "^2.20.0",
    "fs-extra": "^8.0.1",
    "gensequence": "^2.1.2",
    "iconv-lite": "^0.4.24"
  },
  "eslintConfig": {
    "root": true,
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "env": {
      "node": true,
      "mocha": true
    },
    "rules": {}
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.test.ts",
      "src/**/*.spec.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json",
      "html"
    ]
  }
}
